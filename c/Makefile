# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=release
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),release)
  minesweeper_config = release

else ifeq ($(config),debug)
  minesweeper_config = debug

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := minesweeper

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

minesweeper:
ifneq (,$(minesweeper_config))
	@echo "==== Building minesweeper ($(minesweeper_config)) ===="
	@${MAKE} --no-print-directory -C build -f Makefile config=$(minesweeper_config)
endif

clean:
	@${MAKE} --no-print-directory -C build -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  release"
	@echo "  debug"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   minesweeper"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"